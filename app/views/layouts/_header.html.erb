<!-- bootstrap navigation bar parcel -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Apartment App", "/apartments", class: "navbar-brand" %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <!-- if user logged in it will show apartment list link, create apartment link, log out. _path creates route to show user data -->
        <% if user_signed_in? %>
          <li><%= link_to "Apartment List", apartments_path %><li>
          <li><%= link_to "Create Apartment", new_apartment_path %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <!-- if user isn't logged in show login and sign up Nav menu links. Destroy_ deletes the cookies when the user logs out -->
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
